{
  "name": "live-blog-writer",
  "displayName": "Live Blog Writer",
  "description": "Blog writer extension with WYSIWYG editor for VS Code with support for WordPress, Blogger, Medium, Ghost, and Substack blogs",
  "icon": "images/writerIcon.png",
  "version": "0.1.0",
  "publisher": "alvinashcraft",
  "repository": {
    "type": "git",
    "url": "https://github.com/alvinashcraft/live-blog-writer.git"
  },
  "bugs": {
    "url": "https://github.com/alvinashcraft/live-blog-writer/issues"
  },
  "homepage": "https://github.com/alvinashcraft/live-blog-writer#readme",
  "readme": "README.md",
  "license": "MIT",
  "keywords": [
    "blog",
    "blogging",
    "wordpress",
    "blogger",
    "medium",
    "ghost",
    "substack",
    "wysiwyg",
    "editor",
    "publishing",
    "tinymce",
    "markdown",
    "writing"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "qna": "marketplace",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "live-blog-writer.newPost",
        "title": "Live Blog Writer: New Blog Post"
      },
      {
        "command": "live-blog-writer.publishPost",
        "title": "Live Blog Writer: Publish Post"
      },
      {
        "command": "live-blog-writer.setWordPressPassword",
        "title": "Live Blog Writer: Set WordPress Password"
      },
      {
        "command": "live-blog-writer.setBloggerClientId",
        "title": "Live Blog Writer: Set Custom Blogger Credentials (Advanced)"
      },
      {
        "command": "live-blog-writer.authenticateBlogger",
        "title": "Live Blog Writer: Authenticate with Blogger"
      },
      {
        "command": "live-blog-writer.openRecentDraft",
        "title": "Live Blog Writer: Open Recent Draft"
      },
      {
        "command": "live-blog-writer.manageDrafts",
        "title": "Live Blog Writer: Manage Drafts"
      },
      {
        "command": "live-blog-writer.saveDraft",
        "title": "Live Blog Writer: Save Draft"
      },
      {
        "command": "live-blog-writer.manageBlogConfigurations",
        "title": "Live Blog Writer: Manage Blog Connections"
      },
      {
        "command": "live-blog-writer.setMediumToken",
        "title": "Live Blog Writer: Set Medium Integration Token"
      },
      {
        "command": "live-blog-writer.setGhostApiKey",
        "title": "Live Blog Writer: Set Ghost API Key"
      },
      {
        "command": "live-blog-writer.setSubstackApiKey",
        "title": "Live Blog Writer: Set Substack Credentials"
      }
    ],
    "configuration": {
      "title": "Live Blog Writer",
      "properties": {
        "liveBlogWriter.platform": {
          "type": "string",
          "default": "wordpress",
          "enum": [
            "wordpress",
            "blogger",
            "medium",
            "ghost",
            "substack"
          ],
          "description": "[DEPRECATED] Blog platform to publish to. Use liveBlogWriter.blogs for multiple blog support.",
          "deprecationMessage": "Use liveBlogWriter.blogs array instead for better multi-blog support"
        },
        "liveBlogWriter.blogs": {
          "type": "array",
          "default": [],
          "description": "Array of blog configurations. Each entry should have: name, platform, id (optional), username (optional)",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for this blog configuration"
              },
              "platform": {
                "type": "string",
                "enum": [
                  "wordpress",
                  "blogger",
                  "medium",
                  "ghost",
                  "substack"
                ],
                "description": "Blog platform type"
              },
              "id": {
                "type": "string",
                "description": "Blog ID (for Blogger), URL (for WordPress/Ghost), or hostname (for Substack). Optional for Medium."
              },
              "username": {
                "type": "string",
                "description": "Username (for WordPress, Substack, Medium). Optional for others."
              }
            },
            "required": [
              "name",
              "platform"
            ]
          }
        },
        "liveBlogWriter.defaultBlog": {
          "type": "string",
          "default": "",
          "description": "Default blog name to use when publishing. Must match the 'name' field of a blog in liveBlogWriter.blogs. If not set or not found, you'll be prompted to select a blog."
        },
        "liveBlogWriter.wordpress.url": {
          "type": "string",
          "default": "",
          "description": "[DEPRECATED] WordPress site URL. Use liveBlogWriter.blogs instead.",
          "deprecationMessage": "Use liveBlogWriter.blogs array instead"
        },
        "liveBlogWriter.wordpress.username": {
          "type": "string",
          "default": "",
          "description": "[DEPRECATED] WordPress username. Use liveBlogWriter.blogs instead.",
          "deprecationMessage": "Use liveBlogWriter.blogs array instead"
        },
        "liveBlogWriter.blogger.blogId": {
          "type": "string",
          "default": "",
          "description": "[DEPRECATED] Blogger Blog ID. Use liveBlogWriter.blogs instead.",
          "deprecationMessage": "Use liveBlogWriter.blogs array instead"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package:production",
    "compile": "webpack --mode development",
    "compile:tsc": "tsc -p ./",
    "watch": "webpack --mode development --watch",
    "watch:tsc": "tsc -watch -p ./",
    "inject-credentials": "node scripts/inject-credentials.js",
    "package:production": "webpack --mode production",
    "package:dev": "npm run compile:tsc",
    "pretest": "npm run compile:tsc && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npm run package:production && vsce package --allow-star-activation",
    "publish": "npm run package:production && vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "dotenv": "^17.2.3",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
