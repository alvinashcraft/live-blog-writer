{
  "name": "live-blog-writer",
  "displayName": "Live Blog Writer",
  "description": "Blog writer extension with WYSIWYG and Markdown editors for VS Code. Publish to WordPress, Blogger, Ghost, Substack, and Dev.to. Supports localization, post templates, and multiple blogs.",
  "icon": "images/writerIcon.png",
  "version": "1.3.1",
  "publisher": "alvinashcraft",
  "repository": {
    "type": "git",
    "url": "https://github.com/alvinashcraft/live-blog-writer.git"
  },
  "bugs": {
    "url": "https://github.com/alvinashcraft/live-blog-writer/issues"
  },
  "homepage": "https://github.com/alvinashcraft/live-blog-writer#readme",
  "readme": "README.md",
  "license": "MIT",
  "keywords": [
    "blog",
    "blogging",
    "wordpress",
    "blogger",
    "ghost",
    "substack",
    "wysiwyg",
    "editor",
    "publishing",
    "tinymce",
    "markdown",
    "writing",
    "devto",
    "dev.to",
    "localization",
    "i18n",
    "templates",
    "spanish"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "galleryBanner": {
    "color": "#1a237e",
    "theme": "dark"
  },
  "qna": "marketplace",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "live-blog-writer.newPost",
        "title": "%command.newPost.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.publishPost",
        "title": "%command.publishPost.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.setWordPressPassword",
        "title": "%command.setWordPressPassword.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.setBloggerClientId",
        "title": "%command.setBloggerClientId.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.authenticateBlogger",
        "title": "%command.authenticateBlogger.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.openRecentDraft",
        "title": "%command.openRecentDraft.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.manageDrafts",
        "title": "%command.manageDrafts.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.saveDraft",
        "title": "%command.saveDraft.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.manageBlogConfigurations",
        "title": "%command.manageBlogConfigurations.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.setGhostApiKey",
        "title": "%command.setGhostApiKey.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.setSubstackApiKey",
        "title": "%command.setSubstackApiKey.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.setDevToApiKey",
        "title": "%command.setDevToApiKey.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.editPublishedPost",
        "title": "%command.editPublishedPost.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.saveAsTemplate",
        "title": "%command.saveAsTemplate.title%",
        "category": "%command.category%"
      },
      {
        "command": "live-blog-writer.newPostFromTemplate",
        "title": "%command.newPostFromTemplate.title%",
        "category": "%command.category%"
      }
    ],
    "keybindings": [
      {
        "command": "live-blog-writer.newPost",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n"
      },
      {
        "command": "live-blog-writer.saveDraft",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s"
      },
      {
        "command": "live-blog-writer.publishPost",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "liveBlogWriter.platform": {
          "type": "string",
          "default": "wordpress",
          "enum": [
            "wordpress",
            "blogger",
            "ghost",
            "substack",
            "devto"
          ],
          "description": "%configuration.platform.description%",
          "deprecationMessage": "%configuration.platform.deprecationMessage%"
        },
        "liveBlogWriter.blogs": {
          "type": "array",
          "default": [],
          "description": "%configuration.blogs.description%",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "%configuration.blogs.name.description%"
              },
              "platform": {
                "type": "string",
                "enum": [
                  "wordpress",
                  "blogger",
                  "ghost",
                  "substack",
                  "devto"
                ],
                "description": "%configuration.blogs.platform.description%"
              },
              "id": {
                "type": "string",
                "description": "%configuration.blogs.id.description%"
              },
              "username": {
                "type": "string",
                "description": "%configuration.blogs.username.description%"
              }
            },
            "required": [
              "name",
              "platform"
            ]
          }
        },
        "liveBlogWriter.defaultBlog": {
          "type": "string",
          "default": "",
          "description": "%configuration.defaultBlog.description%"
        },
        "liveBlogWriter.wordpress.url": {
          "type": "string",
          "default": "",
          "description": "%configuration.wordpress.url.description%",
          "deprecationMessage": "%configuration.wordpress.url.deprecationMessage%"
        },
        "liveBlogWriter.wordpress.username": {
          "type": "string",
          "default": "",
          "description": "%configuration.wordpress.username.description%",
          "deprecationMessage": "%configuration.wordpress.username.deprecationMessage%"
        },
        "liveBlogWriter.blogger.blogId": {
          "type": "string",
          "default": "",
          "description": "%configuration.blogger.blogId.description%",
          "deprecationMessage": "%configuration.blogger.blogId.deprecationMessage%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package:production",
    "compile": "webpack --mode development",
    "compile:tsc": "tsc -p ./",
    "watch": "webpack --mode development --watch",
    "watch:tsc": "tsc -watch -p ./",
    "inject-credentials": "node scripts/inject-credentials.js",
    "package:production": "webpack --mode production",
    "package:dev": "npm run compile:tsc",
    "pretest": "npm run compile:tsc && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npm run package:production && vsce package --allow-star-activation",
    "publish": "npm run package:production && vsce publish"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "dotenv": "^17.2.3",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "markdown-it": "^14.1.0"
  }
}
